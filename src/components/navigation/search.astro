---
import NavigationSearch from '@/components/navigation/search.vue';
import Button from '@/components/ui/button.astro';
import { getCollection } from "astro:content"

const experience = (await getCollection("experiences")).filter((post: any) => post.data.published);
const projects = (await getCollection("projects")).filter((post: any) => post.data.published);
const entries = [...experience, ...projects]
---
<NavigationSearch client:load data={entries}>
  <Button class="rounded-full p-2 m-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
      <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 1 0 0 11 5.5 5.5 0 0 0 0-11ZM2 9a7 7 0 1 1 12.452 4.391l3.328 3.329a.75.75 0 1 1-1.06 1.06l-3.329-3.328A7 7 0 0 1 2 9Z" clip-rule="evenodd" />
    </svg>
  </Button>
</NavigationSearch>

